{
  "compilerOptions": {
    "lib": [
      "es6",
      "es5",
      "ESNext",
      "DOM"
    ],
    "target": "es6",
    "module": "commonjs",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*",
        "build/*"
      ],
    },
    "moduleResolution": "node",
    "outDir": "./build",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ],
  "include": [
    "./src/**/*",
    "./src/types/**/*",
    "./package.json"
  ]
}